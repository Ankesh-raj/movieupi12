@model IEnumerable<BookShowEntity.Movie>


<div>
    <hr />
    <a asp-controller="Movie" asp-action="MovieEntry">Movie Entry</a>
    <hr />

    <div class="row">
        @foreach (var movie in Model)
        {
            string imageBase64Data =
            Convert.ToBase64String(movie.ImgPoster);
            string imageDataURL =
            string.Format("data:image/jpg;base64,{0}",
            imageBase64Data);
            <div class="card" style="width:18rem;col-md-4">
                <img  height="350"width="350" src="@imageDataURL"/> 

                <div class="card-body">
                    <h5 class="card-title">@movie.Name</h5>
                    <h5 class="card-text">@movie.MovieType</h5>
                    <p class="card-text">@movie.MovieDesc</p>

                    <a asp-controller="Book" asp-action="BookEntry" class="btn btn-primary"> Book</a>
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                </div>

            </div>
        }

    </div>

</div>

<div class="row">
    <div class="col-12">

        <h1 style="text-align:center; color:aquamarine">Movie</h1>
        <hr/>
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie Id</th>
                    <th>Movie Name</th>
                    <th>Movie Desc</th>
                    <th>Movie Type</th>
                    <th>Movie Poster</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    string imageBase64Data =
                    Convert.ToBase64String(movie.ImgPoster);
                    string imageDataURL =
                    string.Format("data:image/jpg;base64,{0}",
                    imageBase64Data);
                    <tr>
                        <td>@movie.Id</td>
                        <td>@movie.Name</td>
                        <td>@movie.MovieDesc</td>
                        <td>@movie.MovieType</td>
                        <td><img height="50" width="50" src="@imageDataURL" /></td>
                       
                
                    @*<tr>
                        <td>@movie.Id</td>
                        <td>@movie.Name</td>
                        <td>@movie.MovieDesc</td>
                        <td>@movie.MovieType</td>
                    </tr*@
                        <td><a asp-controller="Movie" asp-action="EditMovie" asp-route-movieID="@movie.Id">Edit</a></td>
                        @*asp-route-movieID must be similar to paased movie Id in Edit Action*@
                        <td><a asp-controller="Movie" asp-action="DeleteMovie" asp-route-movieID="@movie.Id">Delete</a></td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>